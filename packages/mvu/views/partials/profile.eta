  <dl>
    <dt>Name</dt>
    <dd>
      <%= it.name %>
    </dd>
    <dt>Nickname</dt>
    <dd>
      <%= it.nickname || "" %>
    </dd>
    <dt>Home city</dt>
    <dd>
      <%= it.home %>
    </dd>
    <dt>Home airport(s)</dt>
    <% it.airports.forEach((a) => { %>
    <dd>
      <%= a %>
    </dd>
    <% }) %>
    <dt>Color</dt>
    <dd>
      <%= it.color %>
    </dd>
    <dt>Avatar</dt>
    <dd>
      <%= it.avatar %>
    </dd>
  </dl>
