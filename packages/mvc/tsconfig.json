{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "outDir": "dist/",
    "strict": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "bundler"
  }
}
