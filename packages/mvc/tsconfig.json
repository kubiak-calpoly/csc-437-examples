{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2020",
    "lib": ["es2020"],
    "module": "node16",
    "moduleResolution": "node16",
    "noPropertyAccessFromIndexSignature": false,
    "isolatedModules": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "experimentalResolver": true,
    "esm": true
  }
}
